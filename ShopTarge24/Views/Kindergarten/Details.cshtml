@model ShopTarge24.Models.Kindergarten.KindergartenDetailsViewModel

<h1>Kindergarten Details</h1>

<div>
    <h4>Kindergarten Info</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Group Name</dt>
        <dd class="col-sm-10">@Model.GroupName</dd>

        <dt class="col-sm-2">Children Count</dt>
        <dd class="col-sm-10">@Model.ChildrenCount</dd>

        <dt class="col-sm-2">Kindergarten Name</dt>
        <dd class="col-sm-10">@Model.KindergartenName</dd>

        <dt class="col-sm-2">Teacher Name</dt>
        <dd class="col-sm-10">@Model.TeacherName</dd>

        <dt class="col-sm-2">Created At</dt>
        <dd class="col-sm-10">@Model.CreatedAt</dd>

        <dt class="col-sm-2">Updated At</dt>
        <dd class="col-sm-10">@Model.UpdatedAt</dd>
    </dl>

    <h4>Images</h4>
    <div class="row">
        @foreach (var image in Model.Images)
        {
            <div class="col-md-3 text-center mb-3">
                <img src="@image.Image" class="img-thumbnail" alt="@image.ImageTitle" />

                <form asp-action="RemoveImage"
                      asp-controller="Kindergarten"
                      method="post"
                      class="mt-2">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="imageId" value="@image.ImageId" />
                    <input type="hidden" name="kindergartenId" value="@Model.Id" />
                    <button type="submit" class="btn btn-sm btn-danger">
                        Delete
                    </button>
                </form>
            </div>
        }
    </div>

    <hr />
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
