@model ShopTarge24.Models.Kindergarten.KindergartenDetailsViewModel

<h1>Details</h1>

<div>
    <h4>Kindergarten</h4>
    <hr />
    <dl class="row">
        <div class="form-group row">
            <label asp-for="Id" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.Id)
        </div>
    </dl>

    <dl class="row">
        <div class="form-group row">
            <label asp-for="GroupName" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.GroupName)
        </div>
    </dl>

    <dl class="row">
        <div class="form-group row">
            <label asp-for="ChildrenCount" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.ChildrenCount)
        </div>
    </dl>

    <dl class="row">
        <div class="form-group row">
            <label asp-for="KindergartenName" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.KindergartenName)
        </div>
    </dl>

    <dl class="row">
        <div class="form-group row">
            <label asp-for="TeacherName" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.TeacherName)
        </div>
    </dl>

    <dl class="row">
        <div class="form-group row">
            <label asp-for="CreatedAt" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.CreatedAt)
        </div>
    </dl>

    <dl class="row">
        <div class="form-group row">
            <label asp-for="UpdatedAt" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.UpdatedAt)
        </div>
    </dl>
    
    @foreach (var image in Model.Images)
    {
        <div class="col-lg-12 text-md-center mb-auto">
            <partial name="_Images" model="image" />
            <form asp-action="DeleteImage"
                asp-controller="Kindergarten"
                method="post"
                class="mt-2">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" value="@image.ImageId" />
                <input type="hidden" name="kindergartenId" value="@Model.Id" />
                <button type="submit" class="btn btn-sm btn-danger">
                    Kustuta
                </button>
            </form>

        </div>
    }

    <hr />
    <a asp-action="Index" asp-controller="kindergarten" class="btn btn-danger">Back</a>
</div>