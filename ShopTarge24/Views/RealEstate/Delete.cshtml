@model ShopTarge24.Models.RealEstate.RealEstateDeleteViewModel

<h1 class="mb-4 text-danger">Delete Real Estate</h1>

<div class="card p-4 shadow-sm">
    <h4 class="mb-3 text-secondary">Are you sure you want to delete this listing?</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Id)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(m => m.Id)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Area)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(m => m.Area)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Location)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(m => m.Location)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(m => m.RoomNumber)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(m => m.RoomNumber)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(m => m.BuildingType)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(m => m.BuildingType)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(m => m.CreatedAt)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(m => m.CreatedAt)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(m => m.ModifiedAt)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(m => m.ModifiedAt)</dd>
    </dl>

    <hr />
    <form asp-action="DeleteConfirmation" method="post" class="mt-3">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger me-2">
            <i class="bi bi-trash"></i> Delete
        </button>
        <a asp-action="Index" asp-controller="RealEstate" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back
        </a>
    </form>
</div>
