@model IEnumerable<ShopTarge24.Models.RealEstate.RealEstateIndexViewModel>

@{
    int rowNumber = 1;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">Real Estate Listings</h1>
    <a asp-action="Create" asp-controller="RealEstate" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Create New
    </a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        No real estate listings found.
    </div>
}
else
{
    <table class="table table-hover align-middle shadow-sm">
        <thead class="table-light">
            <tr>
                <th scope="col">#</th>
                <th scope="col">ID</th>
                <th scope="col">Area (m²)</th>
                <th scope="col">Building Type</th>
                <th scope="col">Rooms</th>
                <th scope="col" class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var realEstate in Model)
            {
                <tr>
                    <td>@rowNumber</td>
                    <td>@realEstate.Id</td>
                    <td>@realEstate.Area</td>
                    <td>@realEstate.BuildingType</td>
                    <td>@realEstate.RoomNumber</td>
                    <td class="text-end">
                        <a asp-action="Details" asp-controller="RealEstate" asp-route-id="@realEstate.Id" class="btn btn-sm btn-info text-white me-1">
                            <i class="bi bi-eye"></i> Details
                        </a>
                        <a asp-action="Update" asp-controller="RealEstate" asp-route-id="@realEstate.Id" class="btn btn-sm btn-success me-1">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-action="Delete" asp-controller="RealEstate" asp-route-id="@realEstate.Id" class="btn btn-sm btn-outline-danger">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </td>
                </tr>
                rowNumber++;
            }
        </tbody>
    </table>
}
