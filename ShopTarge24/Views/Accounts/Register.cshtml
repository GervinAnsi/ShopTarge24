@model ShopTarge24.Models.Accounts.RegisterViewModel

@* Tehke ise registreerimise vaade valmis *@

<h2>Register</h2>

<div class="col-md-12">
	<form asp-action="Register" method="post">
		<div asp-validation-summary="All" class="text-bg-danger"></div>
		<div class="form-group">
			<label asp-for="Email" ></label>
			<input asp-for="Email" class="border pt-1 rounded-2" />
			<span asp-validation-for="Email"></span>
		</div>
		<div class="form-group">
			<label asp-for="Name" ></label>
			<input asp-for="Name" class="border pt-1 rounded-2" />
			<span asp-validation-for="Name"></span>
		</div>
		<div class="form-group">
			<label asp-for="City" ></label>
			<input asp-for="City" class="border pt-1 rounded-2" />
			<span asp-validation-for="City" ></span>
		</div>
		<div class="form-group">
			<label asp-for="Password" ></label>
			<input asp-for="Password" class="border pt-1 rounded-2" />
			<span asp-validation-for="Password" ></span>
		</div>
		<div class="form-group">
			<label asp-for="ConfirmPassword" ></label>
			<input asp-for="ConfirmPassword" class="border pt-1 rounded-2" />
			<span asp-validation-for="ConfirmPassword"></span>
		</div>
	</form>
</div>
<div class="container">
	<div class="col-sm-4">
		<button asp-controller="Accounts" asp-action="Register" class="btn btn-outline-primary">Register</button>
	</div>

</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}