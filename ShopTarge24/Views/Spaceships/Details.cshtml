@model ShopTarge24.Models.Spaceships.SpaceshipDetailsViewModel

<h1>Details</h1>

<div>
    <h4>Spaceships</h4>
    <hr />
        <dl class="row">
            <div class="form-group row">
                <label asp-for="Id" class="col-sm-2 col-form-label"></label>
                @Html.DisplayFor(model => model.Id)
            </div>
        </dl>

        <dl class="row">
            <div class="form-group row">
                <label asp-for="Name" class="col-sm-2 col-form-label"></label>
                @Html.DisplayFor(model => model.Name)
            </div>
        </dl>

        <dl class="row">
            <div class="form-group row">
                <label asp-for="Classification" class="col-sm-2 col-form-label"></label>
                @Html.DisplayFor(model => model.Classification)
            </div>
        </dl>

        <dl class="row">
            <div class="form-group row">
                <label asp-for="BuiltDate" class="col-sm-2 col-form-label"></label>
                @Html.DisplayFor(model => model.BuiltDate)
            </div>
        </dl>

        <dl class="row">
            <div class="form-group row">
                <label asp-for="Crew" class="col-sm-2 col-form-label"></label>
                @Html.DisplayFor(model => model.Crew)
            </div>
        </dl>

        <dl class="row">
            <div class="form-group row">
                <label asp-for="EnginePower" class="col-sm-2 col-form-label"></label>
                @Html.DisplayFor(model => model.EnginePower)
            </div>
        </dl>

        <dl class="row">
            <div class="form-group row">
                <label asp-for="CreatedAt" class="col-sm-2 col-form-label"></label>
                @Html.DisplayFor(model => model.CreatedAt)
            </div>
        </dl>

        <dl class="row">
            <div class="form-group row">
                <label asp-for="ModifiedAt" class="col-sm-2 col-form-label"></label>
                @Html.DisplayFor(model => model.ModifiedAt)
            </div>
        </dl>

        @foreach (var image in Model.Images)
        {
            <div class="col-lg-12 text-md-center mb-auto">
                <partial name="_Images" model="image" />

                <form asp-action="DeleteImage"
                      asp-controller="Spaceships"
                      method="post"
                      class="mt-2">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@image.ImageId" />
                    <input type="hidden" name="spaceshipId" value="@Model.Id" />
                    <button type="submit" class="btn btn-sm btn-danger">
                        Kustuta
                    </button>
                </form>
            </div>
        }

        <hr />
        <a asp-action="Index" asp-controller="spaceships" class="btn btn-danger">Back</a>
</div>