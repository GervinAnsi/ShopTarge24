	@model IEnumerable<ShopTarge24.Models.Spaceships.SpaceshipIndexViewModel>

	<div>
		<a asp-action="create" asp-controller="Spaceships" type="submit" class="btn btn-primary">Create</a>
	</div>

	<div class="h1">
		Spaceships
	</div>
	<form method="post">
		<table class="table table-hover">
			<thead>
				<tr>
					<th scope="col">Nr</th>
					<th scope="col">Name</th>
					<th scope="col">Type</th>
					<th scope="col">Build Date</th>
					<th scope="col">Crew</th>
				</tr>
			</thead>
			<tbody>
				@{
					var nr = 1;
				}
				@foreach ( var spaceship in Model)
				{
					<tr>
						<td>@nr</td>
						<td>@spaceship.Name</td>
						<td>@spaceship.Classification</td>
						<td>@spaceship.BuiltDate</td>
						<td>@spaceship.Crew</td>
					</tr>
					nr++;
			}
			</tbody>
		</table>
	</form>